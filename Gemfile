# A sample Gemfile
source "https://rubygems.org"

gem 'rake'
gem 'sinatra'
gem 'sinatra-contrib'
gem 'activerecord'
gem 'sinatra-activerecord'
gem 'nokogiri'
gem 'sinatra-websocket'
gem 'twitter_oauth'  # 追加
gem 'omniauth-twitter'
group :development, :test do
  gem 'sqlite3'
end

group :production do
gem 'pg'
gem 'rails_12factor'
end
